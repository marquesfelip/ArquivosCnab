
# top-most EditorConfig file
root = true

# GENERIC SETTINGS
[*]
end_of_line = lf
insert_final_newline = true

# WEB FILES
[*.{css,html,js}]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true

[*.{js}]
indent_size = 2

[*.{css,html}]
indent_size = 4

# MARKDOWN
[*.md]
trim_trailing_whitespace = false
